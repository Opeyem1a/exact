{
    "manifest_version": 3,
    "name": "Exact",
    "version": "0.0.0",
    "permissions": [],
    "options_page": "src/options/options.html",
    "content_scripts": [
        {
            "matches": [
                "*://*.instagram.com/*",
                "*://*.linkedin.com/*",
                "*://*.youtube.com/*"
            ],
            "js": ["content/main.js"],
            "css": ["content/main.css"]
        },
        {
            "matches": ["*://*.instagram.com/*"],
            "css": ["content/instagram-exceptions.css"]
        },
        {
            "matches": ["*://*.linkedin.com/*"],
            "css": ["content/linkedin-exceptions.css"]
        }
    ]
}
